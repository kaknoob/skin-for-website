{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "python app.py"
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8080",
        "CONFIDENCE_THRESHOLD": "0.5"
      }
    }
  }
}
